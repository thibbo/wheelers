<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sample="http://schemas.android.com/apk/res-auto">

    <CheckBoxPreference
        android:key="@string/use_mph"
        android:title="Use MPH"
        android:summary="Show speed in miles rather than kilometers" />

    <com.pavelsikun.seekbarpreference.SeekBarPreference
        android:key="@string/max_speed"
        android:title="Max Speed"
        android:summary="The maximum speed shown on the outer dial (Pebble watch)"
        android:enabled="true"
        android:defaultValue="30"
        sample:msbp_minValue="10"
        sample:msbp_maxValue="50"
        sample:msbp_interval="1"
        sample:msbp_measurementUnit="km/h"
        sample:msbp_dialogEnabled="true"/>

    <com.pavelsikun.seekbarpreference.SeekBarPreference
        android:key="@string/alarm1"
        android:title="Alarm 1"
        android:enabled="true"
        android:defaultValue="10"
        sample:msbp_minValue="0"
        sample:msbp_maxValue="40"
        sample:msbp_interval="1"
        sample:msbp_measurementUnit="km/h"
        sample:msbp_dialogEnabled="true"/>

    <com.pavelsikun.seekbarpreference.SeekBarPreference
        android:key="@string/alarm2"
        android:title="Alarm 2"
        android:enabled="true"
        android:defaultValue="15"
        sample:msbp_minValue="0"
        sample:msbp_maxValue="40"
        sample:msbp_interval="1"
        sample:msbp_measurementUnit="km/h"
        sample:msbp_dialogEnabled="true"/>

    <com.pavelsikun.seekbarpreference.SeekBarPreference
        android:key="@string/alarm3"
        android:title="Alarm 3"
        android:enabled="true"
        android:defaultValue="20"
        sample:msbp_minValue="0"
        sample:msbp_maxValue="40"
        sample:msbp_interval="1"
        sample:msbp_measurementUnit="km/h"
        sample:msbp_dialogEnabled="true"/>

    <com.pavelsikun.seekbarpreference.SeekBarPreference
        android:key="@string/tilt_back"
        android:title="Tilt back"
        android:summary="The maximum speed shown on the outer dial"
        android:enabled="true"
        android:defaultValue="25"
        sample:msbp_minValue="0"
        sample:msbp_maxValue="40"
        sample:msbp_interval="1"
        sample:msbp_measurementUnit="km/h"
        sample:msbp_dialogEnabled="true"/>
</PreferenceScreen>